<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

	<import type="android.view.View" />

	<variable
	  name="user"
	  type="com.elka.servicedesk.service.model.User" />
  </data>

  <androidx.cardview.widget.CardView
	android:id="@+id/wrapper"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardElevation="0dp">

	<LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="vertical"
	  android:paddingHorizontal="@dimen/app_padding"
	  android:paddingVertical="15dp">

	  <TextView
		style="@style/text"
		android:text="@{user.fullName}"
		android:textStyle="bold"
		tools:text="Иванов Иван" />

	  <TextView
		style="@style/text.hint"
		android:text="@{user.email}"
		tools:text="email@com.ru" />

	  <com.google.android.material.chip.ChipGroup
		android:id="@+id/divisionChips"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal" />

	  <TextView
		style="@style/text"
        android:layout_marginTop="10dp"
		android:text="@{@string/avg_time_title(user.avgTimeOfEndingS, user.countOfEnded)}"
		tools:text="@string/avg_time_title" />


	</LinearLayout>


  </androidx.cardview.widget.CardView>
</layout>