<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="master"
        type="com.elka.servicedesk.view.ui.manager.ManagerAdminsFragment" />

    <variable
        name="viewModel"
        type="com.elka.servicedesk.viewModel.AdminsViewModel" />
  </data>

  <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:paddingHorizontal="@dimen/app_padding"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:onClick="@{() -> master.openRegAdminDialog()}"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/companyName"
        style="@style/text.h1"
        android:layout_width="wrap_content"
        android:text="@string/admins_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

  </LinearLayout>
</layout>