<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="master"
        type="com.elka.servicedesk.view.ui.user.profile.UserProfileFragment" />

    <variable
        name="viewModel"
        type="com.elka.servicedesk.viewModel.UserViewModel" />
  </data>

  <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:paddingHorizontal="@dimen/app_padding"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/companyName"
        style="@style/text.h1"
        android:layout_width="wrap_content"
        android:text="Роль: Пользователь"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/slogan"
        style="@style/text.h3"
        tools:text="Иванов Иван"
        android:gravity="center"
        android:text="@{viewModel.profile.fullName}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyName" />
  </LinearLayout>
</layout>